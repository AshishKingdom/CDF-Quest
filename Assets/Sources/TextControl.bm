SUB CENTERPRINT (nam$)
    _PRINTMODE _KEEPBACKGROUND
    DIM i AS _BYTE
    FOR i = 0 TO INT(40 - (LEN(nam$) / 2) - 1)
        PRINT " ";
    NEXT
    _PRINTMODE _FILLBACKGROUND
    PRINT nam$
END SUB

SUB ENDPRINT (nam$)
    _PRINTMODE _KEEPBACKGROUND
    DIM i AS _BYTE
    FOR i = 0 TO INT(80 - (LEN(nam$))) - 1
        PRINT " ";
    NEXT
    _PRINTMODE _FILLBACKGROUND
    PRINT nam$
END SUB

