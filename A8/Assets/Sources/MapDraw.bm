
SUB SETBG
    IF bgdraw = 0 THEN
    DIM i AS BYTE
    DIM ii AS BYTE
    FOR i = 0 TO 30
        FOR ii = 0 TO 40
            IF map.theme = 0 THEN
                PUTIMAGE (ii * 16, i * 16)-((ii * 16) + 16, (i * 16) + 16), file.grass, , (0, 0)-(15, 15)
            ELSEIF map.theme = 1 THEN
                PUTIMAGE (ii * 16, i * 16)-((ii * 16) + 16, (i * 16) + 16), file.snow, , (16, 16)-(31, 31)
            END IF
        NEXT
    NEXT
    end if
END SUB
 
